<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#FFFFFFFF"
	>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="80dp"
		android:orientation="horizontal"
		android:padding="10dp"
		android:background="#FFd5d5d5"
		>
		<!-- balance layout  -->
		<LinearLayout
			android:id="@+id/balance"
			android:layout_width="match_parent"
			android:layout_height="70dp"
			android:orientation="horizontal"
			android:background="#FFFFFFFF"
			android:layout_gravity="center_vertical"
			android:padding="0dp"
			>
			<TextView
				android:id="@+id/currency_symbol"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:textSize="28sp"
				android:textColor="#FF2f2f2f"
				android:gravity="center_horizontal|center_vertical"
				android:layout_gravity="center_horizontal|center_vertical"
				android:textAlignment="gravity"
				android:background="#FFefefef"
				/>
			<TextView
				android:id="@+id/amount1"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="3"
				android:textSize="28sp"
				android:textStyle="bold"
				android:textColor="#FF2f2f2f"
				android:gravity="left|center_vertical"
				android:layout_gravity="left|center_vertical"
				android:textAlignment="gravity"
				android:layout_marginLeft="2dp"
				android:padding="4dp"
				android:background="#FFffffff"
				android:singleLine="true"
				/>
			<TextView
				android:id="@+id/amount2"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="3"
				android:textSize="16sp"
				android:gravity="right|center_vertical"
				android:layout_gravity="right|center_vertical"
				android:textAlignment="gravity"
				android:textColor="#FF2f2f2f"
				android:padding="4dp"
				android:background="#FFffffff"
				android:singleLine="true"
				/>
		</LinearLayout>

	</LinearLayout>

	<!-- divider -->
	<LinearLayout
		android:id="@+id/divider"
		android:layout_width="fill_parent"
		android:layout_height="10dp"
		android:orientation="horizontal"
		android:background="#FFbcbcbc"
		/>

	<!-- layout used to hide the progressbar panel  -->
	<LinearLayout
		android:id="@+id/balance_ext_hidden"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:orientation="horizontal">

		<LinearLayout
			android:id="@+id/balance_ext"
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:orientation="vertical"
			android:background="#FFd5d5d5">

			<include android:id="@+id/progression_sent" layout="@layout/progression" />

			<include android:id="@+id/progression_received" layout="@layout/progression" />

			<!-- divider -->
			<LinearLayout
				android:layout_marginTop="10dp"
				android:layout_width="fill_parent"
				android:layout_height="10dp"
				android:orientation="horizontal"
				android:background="#FFbcbcbc"
				android:gravity="bottom"
				android:layout_alignParentBottom="true"/>

		</LinearLayout>

	</LinearLayout>

	<!-- divider before list -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:orientation="horizontal"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:background="#ffFFFFFF">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="3"
			android:orientation="horizontal"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:gravity="left|center_vertical"
			android:layout_gravity="left|center_vertical">
			<TextView
				android:id="@+id/listviewTitle"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:textSize="24sp"
				android:textColor="#FF2f2f2f"
				android:gravity="left|center_vertical"
				android:layout_gravity="left|center_vertical"
				android:textAlignment="gravity"
				android:paddingTop="2dp"
				android:paddingBottom="2dp"
				android:singleLine="true"
				android:text="@string/balances"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="2"
			android:orientation="horizontal"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:gravity="right|center_vertical"
			android:layout_gravity="right|center_vertical">

			<ImageView
				android:id="@+id/balances"
				android:src="@drawable/balances_icon_active"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:scaleType="fitXY"
				android:layout_marginRight="10dp"/>

			<ImageView
				android:id="@+id/tx"
				android:src="@drawable/transactions_icon_active"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:scaleType="fitXY"/>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:orientation="horizontal"
		android:padding="0dp"
		android:background="#ffe0e0e0"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		/>

	<!-- transaction list -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="fill_parent"
		android:orientation="horizontal"
		android:padding="0dp">

		<ListView
			android:id="@+id/txList"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:divider="@drawable/list_divider"/>

	</LinearLayout>

</LinearLayout>
